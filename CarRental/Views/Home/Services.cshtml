@{
    ViewData["Title"] = "Our Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="d-flex align-items-center justify-content-center text-white text-center"
         style="background:url('https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/IMG_3496bfree.jpg') no-repeat center center/cover; height:400px;">
    <div class="bg-dark bg-opacity-50 w-100 h-100 d-flex align-items-center justify-content-center">
        <div>
            <h1 class="display-4 fw-bold">Our Services</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item active text-warning" aria-current="page">Our Services</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<!-- Dark Section with Icons -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        <h2 class="fw-bold mb-5">Best Car Rental Services</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <i class="fas fa-car fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Wide Range of Vehicles</h5>
                <p>Choose from economy, SUV, or luxury cars – all maintained to perfection.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-plane-arrival fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Airport Transfers</h5>
                <p>Reliable airport pickup and drop service with professional drivers.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-user-tie fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Luxury Chauffeur</h5>
                <p>Travel in style with our premium chauffeur-driven car rentals.</p>
            </div>
        </div>
    </div>
</section>


<!-- Alternating Content Section -->
<section class="py-5">
    <div class="container">

        <!-- Row 1 (Content Left - Image Right) -->
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h3 class="fw-bold mb-3">Wide Range of Vehicles</h3>
                <p>Choose from economy, SUV, or luxury cars – all maintained to perfection and ready for your trip.</p>
                <a href="/Home/Index" class="btn btn-warning text-dark fw-bold">Book Now</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/pexels-photo-2.jpg" alt="Vehicles" class="img-fluid rounded shadow" />
            </div>
        </div>

        <!-- Row 2 (Image Left - Content Right) -->
        <div class="row align-items-center mb-5 flex-lg-row-reverse">
            <div class="col-lg-6">
                <h3 class="fw-bold mb-3">Airport Transfers</h3>
                <p>Enjoy timely airport pickups and drops with professional drivers for a hassle-free travel experience.</p>
                <a href="/Home/Index" class="btn btn-warning text-dark fw-bold">Book Now</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/nw6xremkxkg-nicolai-berntsen.jpg" alt="Airport Transfer" class="img-fluid rounded shadow" />
            </div>
        </div>

        <!-- Row 3 (Content Left - Image Right) -->
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h3 class="fw-bold mb-3">Luxury Chauffeur Service</h3>
                <p>Get driven around in style with our premium chauffeur service – perfect for business and leisure trips.</p>
                <a href="/Home/Index" class="btn btn-warning text-dark fw-bold">Book Now</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/pexels-photo-112631.jpeg" alt="Chauffeur Service" class="img-fluid rounded shadow" />
            </div>
        </div>

    </div>
</section>
