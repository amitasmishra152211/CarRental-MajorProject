@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="d-flex align-items-center justify-content-center text-white text-center"
         style="background:url('https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/evening.jpg') no-repeat center center/cover; height:500px;">
    <div class="bg-dark bg-opacity-50 w-100 h-100 d-flex align-items-center justify-content-center">
        <div>
            <h1 class="display-3 fw-bold">About Us</h1>
            <p class="lead">We are here to make your journey memorable</p>
        </div>
    </div>
</section>

<!-- Our Story -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="https://themes-themegoods.b-cdn.net/grandcarrental/demo/wp-content/uploads/2017/01/evening.jpg" alt="About" class="img-fluid rounded shadow" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">Our Story</h2>
                <p class="mb-3">
                    We provide high-quality rental cars at affordable prices, ensuring safety,
                    comfort, and reliability for all our customers. From economy to luxury,
                    we have vehicles to suit every journey.
                </p>
                <p class="mb-3">
                    Since 2020, we have been trusted by thousands of travelers for their trips,
                    business tours, and vacations.
                </p>
                <a href="/Home/Services" class="btn btn-warning text-dark fw-bold">Our Services</a>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="py-5 bg-dark text-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Why Choose Us</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <i class="fas fa-car fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Wide Selection</h5>
                <p>From hatchbacks to SUVs and luxury cars, we’ve got it all.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Affordable Pricing</h5>
                <p>No hidden costs, only clear and competitive rates.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-headset fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">24/7 Support</h5>
                <p>Always available to assist you anytime, anywhere.</p>
            </div>
        </div>
    </div>
</section>


<!-- Meet Our Team -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Meet Our Team</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <img src="https://picsum.photos/200" class="rounded-circle mb-3" alt="Team Member">
                <h6 class="fw-bold">John Doe</h6>
                <p class="text-muted">CEO & Founder</p>
            </div>
            <div class="col-md-3">
                <img src="https://picsum.photos/201" class="rounded-circle mb-3" alt="Team Member">
                <h6 class="fw-bold">Jane Smith</h6>
                <p class="text-muted">Operations Manager</p>
            </div>
            <div class="col-md-3">
                <img src="https://picsum.photos/202" class="rounded-circle mb-3" alt="Team Member">
                <h6 class="fw-bold">David Wilson</h6>
                <p class="text-muted">Customer Support</p>
            </div>
            <div class="col-md-3">
                <img src="https://picsum.photos/203" class="rounded-circle mb-3" alt="Team Member">
                <h6 class="fw-bold">Emily Johnson</h6>
                <p class="text-muted">Marketing Head</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        <h2 class="fw-bold mb-3">Book Your Ride Today!</h2>
        <p class="mb-4">Safe, reliable and affordable cars at your fingertips</p>
        <a href="/Home/Index" class="btn btn-warning text-dark fw-bold">Start Booking</a>
    </div>
</section>

<!-- Get in Touch Form -->
<section class="py-5 bg-dark text-white">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">Get in Touch With Us</h2>

        <form method="post" asp-controller="ContactMessage" asp-action="Submit" class="row g-3">
            <input type="hidden" id="success-message" value="@TempData["Success"]" />
            <input type="hidden" id="error-message" value="@TempData["Error"]" />
            <div class="col-md-6">
                <input type="text" name="FullName" class="form-control" placeholder="Your Name" required />
            </div>
            <div class="col-md-6">
                <input type="email" name="Email" class="form-control" placeholder="Your Email" required />
            </div>
            <div class="col-12">
                <input type="text" name="Subject" class="form-control" placeholder="Subject" required />
            </div>
            <div class="col-12">
                <textarea name="Message" rows="5" class="form-control" placeholder="Message" required></textarea>
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-warning text-dark fw-bold">Send Message</button>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    <script src="~/js/_Notification.js"></script>
}