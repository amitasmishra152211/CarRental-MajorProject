@model CarRental_Model.Domain.Booking

@{
    ViewData["Title"] = "Order Received";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-success text-white text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Order Received!</h1>
        <p class="lead">Thank you — your order has been placed.</p>
    </div>
</section>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h4>Booking Details</h4>
                    <p><strong>Booking ID:</strong> @Model.Id</p>
                    <p><strong>Vehicle:</strong> @Model.Vehicle?.VehicleName</p>
                    <p><strong>Booking Dates:</strong> @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                    <p><strong>Name:</strong> @Model.FullName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Mobile:</strong> @Model.MobileNumber</p>
                    <p><strong>Address:</strong> @Model.Locality, @Model.Area, @Model.LandMark, @Model.City - @Model.Pincode, @Model.State</p>
                </div>
            </div>

            <a asp-action="GenerateInvoice" asp-route-bookingId="@Model.Id" class="btn btn-primary">View Invoice</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">My Bookings</a>
        </div>
    </div>
</div>
