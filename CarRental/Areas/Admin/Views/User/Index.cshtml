@model IEnumerable<CarRental_Model.Domain.User>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 id="Usertable" class="mb-4"><i class="fas fa-users"></i> Manage Users</h2>

    <table id="userTable" class="table table-striped table-bordered datatable">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Full Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@($"{user.FirstName} {user.MiddleName} {user.LastName}")</td>
                    <td>@user.Role?.RoleName</td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "User", new { area = "Admin", id = user.Id })">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable();
        });
    </script>
}
