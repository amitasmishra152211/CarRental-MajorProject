@model IEnumerable<CarRental_Model.Domain.ContactMessage>

@{
    ViewData["Title"] = "Contact Messages";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-center">📩 User Messages</h2>

    <table id="Messagetable" class="table table-bordered table-hover shadow-sm datatable">
        <thead class="table-dark">
            <tr>
                <th style="width:25%;">Name</th>
                <th style="width:30%;">Email</th>
                <th style="width:25%;">Received At</th>
                <th style="width:20%;">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var msg in Model)
                {
                    <tr class="message-row" data-msg-id="@msg.Id">
                        <td>
                            <a href="javascript:void(0);" class="toggle-message-detail" data-msg-id="@msg.Id">
                                @msg.FullName
                            </a>
                        </td>
                        <td>@msg.Email</td>
                        <td>@msg.CreatedAt.ToString("dd MMM yyyy hh:mm tt")</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@msg.Id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this message?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>

                    <!-- Hidden Mail Detail -->
                    <tr class="message-detail-row" id="message-detail-@msg.Id" style="display:none;">
                        <td colspan="4">
                            <div class="border p-3 bg-light shadow-sm">
                                <p><strong>Name:</strong> @msg.FullName</p>
                                <p><strong>Email:</strong> @msg.Email</p>
                                <p><strong>Subject:</strong> @msg.Subject</p>
                                <p><strong>Message:</strong></p>
                                <div style="white-space:pre-wrap; background:#f8f9fa; padding:10px; border-radius:5px;">
                                    @msg.Message
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No messages received yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/_Notification.js"></script>
    <script>
        $(document).ready(function () {
            $('.toggle-message-detail').click(function () {
                var id = $(this).data('msg-id');
                $('#message-detail-' + id).slideToggle();
            });
        });
    </script>
}
