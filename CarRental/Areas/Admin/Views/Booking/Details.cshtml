@model CarRental_Model.Domain.Booking

@{
    ViewData["Title"] = "Booking Details - Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Booking Details</h2>

<div class="card shadow-sm p-4">
    <h4>Booking ID: @Model.Id</h4>
    <hr />
    <p><strong>User:</strong> @Model.User?.Username</p>
    <p><strong>Vehicle:</strong> @Model.Vehicle?.VehicleName</p>
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Mobile:</strong> @Model.MobileNumber</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Address:</strong> @Model.Locality, @Model.Area, @Model.LandMark, @Model.City - @Model.Pincode, @Model.State</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToString("dd-MMM-yyyy HH:mm")</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToString("dd-MMM-yyyy HH:mm")</p>
    <p><strong>Status:</strong> <span class="badge bg-primary">@Model.Status</span></p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
