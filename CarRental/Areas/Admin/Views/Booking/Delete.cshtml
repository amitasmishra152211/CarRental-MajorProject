@model CarRental_Model.Domain.Booking

@{
    ViewData["Title"] = "Delete Booking - Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-danger">Delete Booking</h2>

<div class="alert alert-warning">
    <h5>Are you sure you want to delete this booking?</h5>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>User:</strong> @Model.User?.Username</p>
    <p><strong>Vehicle:</strong> @Model.Vehicle?.VehicleName</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-area="Admin" asp-controller="Booking" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
